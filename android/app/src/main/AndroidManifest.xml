<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.example.slint_android_app">

    <!-- Permissão para acessar localização precisa (GPS) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:label="SlintApp" android:hasCode="true">
        <activity android:name="org.slint.android.SlintActivity"
            android:label="SlintApp"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
